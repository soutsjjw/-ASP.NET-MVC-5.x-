@model MessageBoard.ViewModels.Members.Login
@{
    ViewBag.Title = "登入";
}

<h2>登入</h2>

<form id="LoginForm" asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Account"></label>
        <input type="text" class="form-control" asp-for="Account" autocomplete="false" />
        <span asp-validation-for="Account" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" class="form-control" asp-for="Password" autocomplete="false" />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-sm">登入</button>
        <a asp-action="Register">去註冊</a>
    </div>
</form>

@section Style {
    <style type="text/css">
        form {
            margin: 0 auto;
            width: 560px;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}